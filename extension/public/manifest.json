{
  "manifest_version": 3,
  "name": "AnyPageGPT",
  "description": "Make any page into a GPT chatbot.",
  "author": "liyangguangcn@gmail.com",  
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://any-page-gpt.vercel.app/"]
}
